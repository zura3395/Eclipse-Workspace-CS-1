#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

int main() {
	// Part 1
	//  annualInterest, annualBalance, dailyInterest, dailyBalance;

	cout << "Part 1: Interest Calculations" << endl;
	cout << setprecision(2) << fixed << showpoint;

	// Prompt user for principal
	double principal = 123.45;
	cout << "Please enter the principal." << endl;
	// cin >> principal;

	// Prompt user for interest rate percentage
	double interestRatePercentage = 5.25;
	cout << "Please enter the interest rate in %" << endl;
	// cin >> interestRatePercentage;

	// Calculations
	double interestRate = interestRatePercentage/100;
	double annualInterest = principal * interestRate;
	double annualBalance = principal + annualInterest;
	double dailyInterest = principal * (1 + pow((interestRate/365), 365)) - principal;
	double dailyBalance = principal + dailyInterest;

	// Print data
	cout << showpoint << setprecision(2) << fixed;
	cout << endl << setw(50) << left << "For a loan of" << setw(10) << right << "$" << principal << endl;
	cout << setw(50) << left << "with a rate of" << setw(10) << right << interestRatePercentage << " %" << endl;
	cout << setw(50) << left << "the interest, compounded annually, is" << "$" << setw(10) << right << annualInterest << endl;
	cout << setw(50) << left << "the balance at the end of the year would be" << "$" << setw(10) << right << annualBalance << endl;
	cout << setw(50) << left << "the interest, compounded daily, is" << "$" << setw(10) << right << dailyInterest << endl;
	cout << setw(50) << left << "the balance at the end of the year would be" << "$" << setw(10) << right << dailyBalance << endl;
}
